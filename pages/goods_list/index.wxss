/* pages/goods_list/index.wxss */
.searchbox{
  background-color: #eee!important;
  
}
.align{
  justify-content: start!important;
}
.tab {
  display: flex;
  padding: 20px 0;
  justify-content: space-around;
  border-bottom: 1px solid #eee;
}
.productInfo{
  display: flex;
  padding: 20rpx;
  margin: 0 auto;
  width: 90%;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.productInfo image{
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.productInfo .text{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
}
.productInfo .desc{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  
}
.productInfo .money{
  color: #eb4450;
  font-size: 24px;
}
.productInfo .money text{
  font-size: 16px;
}
.tip{
  padding: 20rpx;
  text-align: center;
  color: #ccc;
}
  